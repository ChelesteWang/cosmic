{
  "name": "cosmic-design",
  "description": "awesome design tool",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/design-to-release/cosmic.git"
  },
  "author": {
    "name": "qiansc",
    "url": "https://github.com/design-to-release"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/design-to-release/cosmic/issues"
  },
  "keywords": [
    "electron",
    "svelte",
    "typescript",
    "electron-builder",
    "electron-log",
    "tslint",
    "ts-jest",
    "electron-settings",
    "electron-updater",
    "rollup"
  ],
  "homepage": "https://github.com/design-to-release/cosmic#readme",
  "main": "dist/app/index.js",
  "scripts": {
    "prestart": "cross-env NODE_ENV=development node scripts/preBuild.js",
    "start": "cross-env NODE_ENV=development npm-run-all -p -r build:frontend:dev start:electron",
    "prebuild": "cross-env NODE_ENV=production node scripts/preBuild.js",
    "build": "cross-env NODE_ENV=production npm-run-all -s build:frontend:prod build:electron:prod",
    "postbuild": "cross-env NODE_ENV=production node scripts/postBuild.js",
    "build:frontend:dev": "cross-env NODE_ENV=development rollup -c -w",
    "build:frontend:prod": "cross-env NODE_ENV=production rollup -c",
    "build:electron:dev": "tsc --p ./tsconfig.app.json",
    "build:electron:dev:watch": "tsc -w --p ./tsconfig.app.json",
    "build:electron:prod": "cross-env NODE_ENV=production tsc --p ./tsconfig.app.prod.json",
    "validate:svelte": "svelte-check --compiler-warnings \"module-script-reactive-declaration:ignore\"",
    "start:electron:run": "electron .",
    "start:electron:nodemon": "nodemon",
    "start:electron:dev": "npm-run-all -s build:electron:dev start:electron:nodemon",
    "start:electron": "npm-run-all -p build:electron:dev:watch start:electron:dev",
    "test": "jest --config jest.config.json",
    "postinstall": "electron-builder install-app-deps",
    "preinstall": "npx only-allow pnpm",
    "preinstall:all": "npx only-allow pnpm",
    "prepack": "npm run build",
    "pack": "electron-builder --dir",
    "predist": "npm run build",
    "dist": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "postdist": "node scripts/cleanBuilds.js",
    "format": "prettier --write \"src/**/**/*\" --write \"scripts/**/**/*\"",
    "lint:electron": "eslint -c eslint.app.json --ext .js,.ts src/app",
    "lint:svelte": "eslint -c eslint.svelte.json --ext .js,.ts,.svelte src/workbench",
    "lint": "npm-run-all -s lint:electron lint:svelte",
    "prepublishOnly": "npm-run-all -s test lint",
    "preversion": "npm-run-all -s lint format",
    "typecheck-app": "tsc --noEmit -p ./tsconfig.app.json",
    "typecheck-svelte": "tsc --noEmit -p ./tsconfig.svelte.json",
    "typecheck": "npm run typecheck-app && npm run typecheck-svelte",
    "storybook": "start-storybook -p 4200 -c .storybook",
    "storybook:build": "build-storybook -c .storybook -o dist/docs"
  },
  "dependencies": {
    "@types/color": "^3.0.1",
    "color": "^3.1.3",
    "electron-log": "^4.3.1",
    "electron-store": "^7.0.2",
    "electron-updater": "^4.3.5",
    "eventemitter2": "^6.4.4",
    "inversify": "^5.1.1",
    "reflect-metadata": "^0.1.13",
    "smelte": "^1.1.5"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.0.3",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-typescript": "^8.2.1",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-notes": "^5.3.21",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addon-storysource": "^6.2.9",
    "@storybook/addon-viewport": "^6.2.9",
    "@storybook/source-loader": "^6.2.9",
    "@storybook/svelte": "^6.2.9",
    "@tsconfig/svelte": "^1.0.13",
    "@types/clean-css": "^4.2.3",
    "@types/html-minifier": "^4.0.0",
    "@types/node": "^14.17.1",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "clean-css": "^5.0.1",
    "cross-env": "^7.0.3",
    "electron": "^12.0.6",
    "electron-builder": "^22.10.5",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-jsdoc": "^32.0.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-svelte3": "^3.2.0",
    "html-minifier": "^4.0.0",
    "jest": "^26.6.3",
    "merge-deep": "^3.0.3",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.0",
    "postcss-import": "^14.0.2",
    "postcss-loader": "~4.0.4",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.1.5",
    "rollup": "^2.39.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.38.1",
    "svelte-check": "^1.1.34",
    "svelte-loader": "^3.1.1",
    "svelte-preprocess": "^4.6.9",
    "svelte-typed-component": "^1.1.1",
    "tailwindcss": "^2.1.4",
    "ts-jest": "^26.5.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run typecheck"
  },
  "lint-staged": {
    "*.{js,ts,svelte}": "eslint --cache --fix"
  },
  "build": {
    "productName": "Electron Svelte Typescript",
    "appId": "electron.svelte.typescript",
    "copyright": "Copyright Â© 2021 ${author}",
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "productivity",
      "type": "distribution",
      "hardenedRuntime": "true"
    },
    "linux": {
      "target": [
        "AppImage",
        "snap"
      ],
      "category": "productivity"
    },
    "files": [
      "build/*/",
      "node_modules/*/",
      "package.json"
    ],
    "extraResources": [
      "assets/**"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "design-to-release",
        "repo": "cosmic"
      }
    ]
  }
}
