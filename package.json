{
  "name": "vite-electron-builder",
  "private": true,
  "engines": {
    "node": ">=v14.16",
    "npm": ">=7.7"
  },
  "main": "dist/core/index.cjs",
  "scripts": {
    "buildEnvTypes": "node scripts/buildEnvTypes.js",
    "build": "node scripts/build.js",
    "precompile": "cross-env MODE=production npm run build",
    "compile": "electron-builder build --config electron-builder.config.js --dir --config.asar=false",
    "pretest": "cross-env MODE=test npm run build",
    "test": "node tests/app.spec.js",
    "watch": "node scripts/watch.js",
    "lint": "eslint . --ext js,ts,svelte",
    "pretypecheck": "npm run buildEnvTypes",
    "typecheck-main": "tsc --noEmit -p src/tsconfig.json",
    "typecheck": "npm run typecheck-main"
  },
  "browserslist": [
    "Chrome 89"
  ],
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run typecheck"
  },
  "lint-staged": {
    "*.{js,ts,svelte}": "eslint --cache --fix"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.2",
    "@types/electron-devtools-installer": "^2.2.0",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "cross-env": "^7.0.3",
    "electron": "^12.0.7",
    "electron-builder": "^22.11.1",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^7.26.0",
    "eslint-plugin-svelte3": "^3.2.0",
    "lint-staged": "^10.5.4",
    "rollup-plugin-node-resolve": "^5.2.0",
    "simple-git-hooks": "^2.4.1",
    "spectron": "^14.0.0",
    "typescript": "^4.2.4",
    "vite": "^2.2.4"
  },
  "dependencies": {
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.7",
    "electron-updater": "^4.3.8",
    "inversify": "^5.1.1",
    "reflect-metadata": "^0.1.13",
    "svelte": "^3.37.0",
    "svelte-preprocess": "^4.7.2"
  }
}
